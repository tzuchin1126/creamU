@using (Html.BeginForm())
{
    <br />
    <br />
    <br />
    <br />

    //麵包屑
    <section class= "page-header" >
        <div class= "container" >
            <div class= "row" >
                <div class= "col-md-12" >
                    <div class= "content" >
                        <h1 class= "page-name"> 加入購物車 </h1 >
                        <ol class= " breadcrumb" >
                            <li ><a href = "index.html" > 首頁 </a ></li >
							<li class="active"> 購買確認 </li>
                        </ol >
                    </div >
                </div >
            </div >
        </div >
    </section >



	@Html.AntiForgeryToken()
	<input type="hidden" name="txtFid" value="@ViewBag.ProductId" />

	<div class="row mt-20">
		<div class="col-md-5">
			<div class="single-product-slider">
				<div id='carousel-custom' class='carousel slide' data-ride='carousel'>
					<div class='carousel-outer'>
						<img class="img-responsive" src="~/imgs/@ViewBag.ProductImage" alt="product-img" />
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-7">
			<div class="single-product-details">
				<h2>@ViewBag.ProductName</h2>
				<p class="product-price">$@ViewBag.price</p>
				<p class="product-description mt-20">
					@ViewBag.Descript
				</p>
				
				<div class="product-quantity">
					<span>數量:</span>
					<div class="product-quantity-slider">
						@*@Html.TextBox("txtCount", "1", new { htmlAttributes = new { @class = "form-control" } })*@
						@Html.TextBox("txtCount", "1", new { htmlAttributes = new { @class = "form-control custom-class" } })

					</div>
				</div>

				<input type="submit" value="加入購物車" class="btn btn-main mt-20" />
				<a href="index.html" class="btn btn-main mt-20">取消購買</a>
			</div>
		</div>
	</div>
}

