	<section class="products section bg-gray">
		<div class="container">
			<h3 class="text-center" style="margin-bottom:5px; font-weight:700">全部商品</h3>
			<h5 class="section-sub-title" style="text-align:center">All Products</h5>
			@*關鍵字*@
			<form>
				@using (Html.BeginForm())
				{
					<div class="d-flex justify-content-center">
						<div class="d-flex align-items-stretch" style="margin-bottom:20px;">
							@Html.TextBox("txtKeyword", null, new { placeholder = "商品名稱", @class = "search-input form-control col-md-3 ", style = "border: 1px solid #EAE4DA; border-radius: 10px; color: #868283; font-size: 14px; flex-grow: 1;" })
							<button type="submit" class="btn btn-info" style="color: white; opacity: 0.8; border-radius: 10px;  font-size: 14px; margin-left:5px;">查詢</button>
						</div>
					</div>
				}
			</form>
			<div class="row">
				@foreach (var item in Model)
				{
					<div class="col-md-3">
						<div class="product-item">
							<div class="product-thumb">
								<img class="img-responsive" src="~/imgs/@item.ProductImage" alt="product-img" />
								<div class="preview-meta">
									<ul>
										<li>
										@*預覽效果*@
										<span class="btn-1" data-toggle="modal" data-target="#product-modal" data-product-id="@item.ProductId">
											<i class="tf-ion-ios-search-strong"></i>
										</span>
										</li>
										<li>
											<a href="#!"><i class="tf-ion-ios-heart"></i></a>
										</li>
										<li>
											<a href="@Url.Action("AddToCart", new { id = item.ProductId })">
												<i class="tf-ion-android-cart"></i>
											</a>
											@*<a href="#!"><i class="tf-ion-android-cart"></i></a>*@
										</li>
									</ul>
								</div>
							</div>
							<div class="product-content">
								<h4><a href="product-single.html">@item.ProductName</a></h4>
								<p class="price">$@item.Price</p>
								@*@Html.ActionLink("加入購物車", "AddToCart", new { id = item.ProductId }, new { @class = "btn btn-primary" })*@
							</div>
						</div>
					</div>

					//商品預覽 有一個加入購物車的btn
					<div class="modal product-modal fade" id="product-modal">
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<i class="tf-ion-close"></i>
						</button>
						<div class="modal-dialog " role="document">
							<div class="modal-content">
								<div class="modal-body">
									<div class="row">
										<div class="col-md-8 col-sm-6 col-xs-12">
											<div class="modal-image">
												<img class="img-responsive" id="product-modal-image" src="" alt="product-img" style="margin-top:50px;" />
											</div>
										</div>
										<div class="col-md-4 col-sm-6 col-xs-12">
											<div class="product-short-details">
												<h4 class="product-title" id="product-modal-title"></h4>
												<p class="product-price" id="product-modal-price"></p>
												<p class="product-short-description" id="product-modal-description" style="font-size:13px;"></p>
												<a href="@Url.Action("AddToCart", new { id = item.ProductId })" class="btn btn-main">
													@Html.Raw("加入購物車")
												</a>
												<a href="product-single.html" class="btn btn-transparent">商品資訊</a>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				}
			</div>
		</div>

		@*分頁*@
		<nav aria-label="Page navigation example" class="d-flex justify-content-center">
			<ul class="pagination pagination-sm justify-content-center">
				@if (ViewBag.pageNum == null || ViewBag.pageNum == 0)
				{
					<li class="page-item active" aria-current="page">
						<span class="page-link">1</span>
					</li>
				}
				else
				{
					for (int i = 1; i <= ViewBag.pageNum; i++)
					{
						if (i == ViewBag.Page)
						{
							<li class="page-item active" aria-current="page">
								<span class="page-link">@i</span>
							</li>
						}
						else
						{
							<li class="page-item">
								<a class="page-link" href="@Url.Action("Index", new { Page = i, KeyWord = ViewBag.Keyword })">@i</a>
							</li>
						}
					}
				}
			</ul>
		</nav>
	</section>

