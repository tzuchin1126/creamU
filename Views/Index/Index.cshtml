<script>
	$(function () {
		$('.btn-1').click(function () {
			var productId = $(this).data('product-id');

			$.ajax({
				url: '/Index/ProductDetail',
				type: 'GET',
				data: { id: productId },
				success: function (result) {
					$('#product-modal-image').attr('src', '/imgs/' + result.imageUrl);
					$('#product-modal-title').text(result.productName);
					$('#product-modal-price').text('$' + result.price);
					$('#product-modal-description').text(result.description);

					$('#product-modal').modal('show');
				},
				error: function (xhr, status, error) {
					console.log(error);
				}
			});
		});
	});
</script>






