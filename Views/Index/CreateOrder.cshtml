@*麵包屑*@
<section class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="content">
                    <h1 class="page-name">購物頁面</h1>
                    <ol class="breadcrumb">
                        <li><a asp-controller="Index" asp-action="CartView">購物車</a></li>
                        <li class="active">購買頁面</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="page-wrapper" style="padding:10px;">
    <div class="checkout shopping">
        <div class="container">
            <div class="row">
                <div class="col-md-8" style="padding-left:0px;">
                    <div class="block billing-details">
                        <h4 class="widget-title">訂單資料</h4>
                        <form class="checkout-form">
                            <div class="form-group">
                                <label for="full_name">收貨人姓名</label>
                                <input type="text" class="form-control" id="full_name" placeholder="">
                            </div>
                            <div class="form-group">
                                <label for="full_phone">收貨人電話</label>
                                <input type="number" class="form-control" id="full_name" placeholder="">
                            </div>
                            <div class="checkout-country-code clearfix">
                                <div class="form-group">
                                    <label for="user_post_code">郵遞區號</label>
                                    <input type="text" class="form-control" id="user_post_code" name="zipcode" value="">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="user_address">收貨人地址</label>
                                <input type="text" class="form-control" id="user_address" placeholder="">
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-4" style="width:30.333333%">
                    <!-- 右側付款方式 -->
                    <h4 class="widget-title">付款方式</h4>
                    <p>信用卡付款</p>
                    <div class="checkout-product-details">
                        <div class="payment">
                            <div class="card-details">
                                <form class="checkout-form">
                                    <div class="form-group">
                                        <label for="card-number">信用卡卡號<span class="required">*</span></label>
                                        <input id="card-number" class="form-control" type="tel" placeholder="•••• •••• •••• ••••">
                                    </div>
                                    <div class="form-group half-width padding-right">
                                        <label for="card-expiry">有效日 <span class="required">*</span></label>
                                        <input id="card-expiry" class="form-control" type="tel" placeholder="MM / YY">
                                    </div>
                                    <div class="form-group half-width padding-left">
                                        <label for="card-cvc">安全碼<span class="required">*</span></label>
                                        <input id="card-cvc" class="form-control" type="tel" maxlength="4" placeholder="CVC">
                                    </div>
                                    <a href="confirmation.html" class="btn btn-main mt-20">結帳</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
